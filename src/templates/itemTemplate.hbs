{{#each this}}
<li class="gallery__item">
    <div class="gallery__thumb">
        <img id="{{id}}" src="http://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}}">
    </div>
    <h2 class="gallery__title">{{title}}</h2>
    <p class="gallery__text">        
        {{#each genre_ids}}{{this}} {{/each}} | 
        {{#if release_date}}{{release_date}} {{/if}}
        {{#unless release_date}}Release date unknown {{/unless}}
        <span class="gallery__label label-lb">{{vote_average}}</span>
    </p>
</li>
{{/each}}